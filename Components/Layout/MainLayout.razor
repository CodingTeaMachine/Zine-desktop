@inherits LayoutComponentBase
@using Zine.Window
@using Page = Zine.App.Enums.Page

<MudThemeProvider IsDarkMode="true"/>
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Zine</PageTitle>

<MudLayout>
    <MudAppBar>
        <h1 class="font-bold text-2xl">Zine <span class="px-1"> - </span> @PageTitleManager.PageTitle</h1>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="1" Variant="@DrawerVariant.Mini" ClipMode="DrawerClipMode.Always" OpenMiniOnHover="true">
        <MudNavMenu>
            <MudNavLink Href="@Page.Home" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="@Page.Library" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Book">Library</MudNavLink>
            <MudNavLink Href="@Page.Settings" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Settings">Settings</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <div class="p-10">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;
}
