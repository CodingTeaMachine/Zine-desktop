@using Microsoft.IdentityModel.Tokens
@using Zine.App.Domain.Person


<div class="max-w-96 flex flex-row flex-wrap">
	@foreach (var row in ChipFilterFunc.Invoke(SelectedValues))
	{
		@if (ShowInput)
		{
			<MudChip T="string" Color="Color.Primary" Size="Size.Small" OnClose="() => RemoveSelectedValue(row)">
				@RowToString.Invoke(row)
			</MudChip>
		}
		else
		{
			<MudChip T="string" Color="Color.Primary" Size="Size.Small">
				@RowToString.Invoke(row)
			</MudChip>
		}
	}
</div>

@if (ShowInput)
{
	<MudAutocomplete
		@ref="_mudMultiselect"
		T="Person"
		Label="@Label"
		Value="null"
		ValueChanged="OnSelectedValuesChanged"
		SearchFunc="Search"
		ToStringFunc="RowToString.Invoke"
		Strict="false"
		ShowProgressIndicator="true"
		CoerceValue="true"
		CoerceText="true"
		ResetValueOnEmptyText="true"
	>

		<ItemTemplate Context="person">
			<div class="flex items-center justify-between">
				<MudText>
					@RowToString.Invoke(person)
				</MudText>

				<div @onclick:stopPropagation="true">
					<MudIcon
						Class="hover:fill-red-500"
						Icon="@Icons.Material.Filled.Clear"
						@onclick="() => DeleteRow(person)"

					/>
				</div>
			</div>

		</ItemTemplate>

		<AfterItemsTemplate>
			@if (!_currentSearchTerm.IsNullOrEmpty())
			{
				<div class="pa-2">
					<MudButton Color="Color.Primary" @onclick="CreateRow">
						<MudText>
							Create "@_currentSearchTerm"
						</MudText>
					</MudButton>
				</div>
			}
		</AfterItemsTemplate>

		<NoItemsTemplate>
			@if (_currentSearchTerm.IsNullOrEmpty())
			{
				<MudText Align="Align.Center" Class="px-4 py-1">
					@NoMoreDataText
				</MudText>
			}
			else
			{
				<div class="pa-2">
					<MudButton Color="Color.Primary" @onclick="CreateRow">
						<MudText>
							Create "@_currentSearchTerm"
						</MudText>
					</MudButton>
				</div>
			}

		</NoItemsTemplate>

	</MudAutocomplete>
}


@code {

	[Parameter]
	public required string Label { get; set; }

	[Parameter]
	public string NoMoreDataText { get; set; } = "No items found";

	[Parameter]
	public bool ShowInput { get; set; }

	[Parameter]
	public required Func<Person?, string> RowToString { get; set; }

	//Create

	[Parameter]
	public required EventCallback<string> OnCreate { get; set; }

	//Read

	[Parameter]
	public required ICollection<Person> SelectedValues { get; set; } = [];

	[Parameter]
	public EventCallback<ICollection<Person>> SelectedValuesChanged { get; set; }

	[Parameter]
	public required Func<string?, CancellationToken, IEnumerable<Person>> SearchFunc { get; set; }

	[Parameter]
	public Func<IEnumerable<Person>, IEnumerable<Person>> ChipFilterFunc { get; set; } = values => values;

	// Delete

	[Parameter]
	public required EventCallback<Person> OnDelete { get; set; }


	private MudAutocomplete<Person> _mudMultiselect = null!;

	private IEnumerable<int> SelectedPeopleIdList => SelectedValues.Select(p => p.Id);

	private string _currentSearchTerm = string.Empty;

	private async void OnSelectedValuesChanged(Person? selection)
	{
		if (selection != null)
		{
			SelectedValues.Add(selection);
			await SelectedValuesChanged.InvokeAsync(SelectedValues);
		}

		await _mudMultiselect.ClearAsync();
		await _mudMultiselect.BlurAsync();
	}


	private Task<IEnumerable<Person>> Search(string? searchTerm, CancellationToken cancellationToken)
	{
		_currentSearchTerm = searchTerm ?? string.Empty;

		return Task.FromResult(
			SearchFunc
				.Invoke(searchTerm, cancellationToken)
				.Where(person => !SelectedPeopleIdList.Contains(person.Id))
		);
	}

	private Task OnValueChanged(ChangeEventArgs e)
	{
		SelectedValues = (ICollection<Person>)Convert.ChangeType(e.Value, typeof(ICollection<Person>))!;
		return SelectedValuesChanged.InvokeAsync(SelectedValues);
	}

	private void CreateRow()
	{
		OnCreate.InvokeAsync(_currentSearchTerm);
	}

	private void DeleteRow(Person person)
	{

		OnDelete.InvokeAsync(person);
		RemoveSelectedValue(person);
		_mudMultiselect.ForceUpdate();
	}

	private void RemoveSelectedValue(Person person)
	{
		SelectedValues = SelectedValues.Where(p => p.Id != person.Id).ToList();
		SelectedValuesChanged.InvokeAsync(SelectedValues);
	}

}
